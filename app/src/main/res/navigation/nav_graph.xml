<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.kalamou.weatherapplication.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:popUpToInclusive="true"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_weatherCityDetail"
            app:popUpToInclusive="true"
            app:destination="@id/weatherCityDetail" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.kalamou.weatherapplication.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:popUpToInclusive="true"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/weatherCityDetail"
        android:name="com.kalamou.weatherapplication.WeatherCityDetail"
        android:label="@string/weather_detail_fragment"
        tools:layout="@layout/fragment_weather_city_detail" >
        <action
            android:id="@+id/action_weatherCityDetail_to_FirstFragment"
            app:popUpToInclusive="true"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>